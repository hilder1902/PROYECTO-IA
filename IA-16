import logging
import MetaTrader5 as mt5
import pandas as pd
from sklearn.preprocessing import MinMaxScaler
from time import sleep

def main():
    logging.basicConfig(level=logging.INFO, format="%(asctime)s - %(levelname)s - %(message)s")

    if not mt5.initialize():
        logging.error("‚ùå Error al inicializar MetaTrader 5.")
        exit()
    
    scaler = MinMaxScaler(feature_range=(0, 1))
    modelo = cargar_modelo()
    pares_divisas = ["BTCUSDm", "BTCZARm", "BTCCNHm"]

    logging.info("üìä Entrenando el modelo antes de predicciones en tiempo real...")
    datos_historicos = obtener_datos_mt5("BTCUSDm", mt5.TIMEFRAME_M1, 5000)

    if datos_historicos is not None and len(datos_historicos) > 50:
        X, y = preparar_datos(datos_historicos)
        split = int(len(X) * 0.8)
        modelo = entrenar_modelo(modelo, X[:split], y[:split], X[split:], y[split:])
        guardar_modelo(modelo)

    logging.info("‚úÖ Modelo entrenado. Iniciando predicciones en tiempo real...")

    while True:
        for simbolo in pares_divisas:
            print("\n\n\n\n")  # Separaci√≥n de 4 l√≠neas despu√©s del bloque
            logging.info(f"üîç Iniciando predicci√≥n para {simbolo}...")

            # Obtener los √∫ltimos 500 datos
            rates = mt5.copy_rates_from_pos(simbolo, mt5.TIMEFRAME_M1, 0, 500)
            if rates is None or len(rates) < 50:
                logging.warning(f"‚ö†Ô∏è No hay suficientes datos recientes para {simbolo}.")
                continue

            # Preparar DataFrame normalizado
            df = pd.DataFrame(rates)[['close']]
            df['close'] = scaler.fit_transform(df[['close']])  # Normalizaci√≥n

            # Hacer predicci√≥n con el modelo
            recent_data = df[-50:].values.reshape(1, 50, -1)
            prediccion = modelo.predict(recent_data)[0][0]

            # Evaluar la predicci√≥n
            resultados = evaluar_prediccion_binaria(
                prediccion={simbolo: prediccion},  # Se pasa en formato diccionario
                simbolos=[simbolo],  # Lista con un solo s√≠mbolo
                modelo=modelo, 
                dfs={simbolo: df},  # Diccionario con los DataFrames
                scaler=scaler,
                tp=0.0001
            )

            # Extraer los valores retornados para el s√≠mbolo espec√≠fico
            precio_actual, direccion, precio_final = resultados.get(simbolo, (None, None, None))

            if precio_actual is None or direccion is None or precio_final is None:
                logging.warning(f"‚ö†Ô∏è No se pudo obtener una predicci√≥n v√°lida para {simbolo}.")
                continue

            # Guardar la predicci√≥n
            guardar_prediccion(simbolo, direccion, precio_final, precio_actual)
            print("\n\n\n\n")  # Separaci√≥n de 4 l√≠neas despu√©s del bloque

            
        
        sleep(1)  # Peque√±a pausa para evitar sobrecarga

if __name__ == "__main__":
    main() 
