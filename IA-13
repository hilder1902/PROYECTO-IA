def evaluar_prediccion_binaria(prediccion, simbolo, precio_actual=None, tp=0.0001):
    """
    Eval√∫a si la predicci√≥n fue correcta en t√©rminos de alcanzar el TP.
    Obtiene los precios futuros directamente desde MT5 y compara con el precio inicial.

    :param prediccion: Direcci√≥n de la predicci√≥n (1 = subir, 0 = bajar)
    :param simbolo: S√≠mbolo del activo en MT5
    :param precio_actual: Precio inicial desde hacer_prediccion (opcional, se obtiene de MT5 si es None)
    :param tp: Take Profit en t√©rminos de diferencia de precio
    :return: True si alcanz√≥ TP, False en caso contrario
    """

    # üîß Asegurar que precio_actual es num√©rico y v√°lido
    if precio_actual is None or not isinstance(precio_actual, (int, float)) or precio_actual <= 0:
        tick_info = mt5.symbol_info_tick(simbolo)
        if tick_info and isinstance(tick_info.bid, (int, float)):
            precio_actual = float(tick_info.bid)
            print(f"‚úî Precio inicial obtenido de MT5: {precio_actual:,.5f}")
        else:
            print(f"‚ùå Error: No se pudo obtener un precio inicial v√°lido para {simbolo}.")
            return False  

    print(f"\nüìä Evaluando predicci√≥n para {simbolo}:")
    print(f"   - Precio antes de 5 segundos: {precio_actual:,.5f}")  

    # Esperar 5 segundos antes de obtener el precio final
    time.sleep(5)

    # Obtener el precio despu√©s de los 5 segundos
    tick_info = mt5.symbol_info_tick(simbolo)
    if tick_info and isinstance(tick_info.bid, (int, float)):
        precio_final = float(tick_info.bid)
        print(f"   - Precio despu√©s de 5 segundos: {precio_final:,.5f}")  
    else:
        print(f"‚ö† Error: No se pudo obtener un precio final v√°lido para {simbolo}.")
        return False

    # üîç Comparativa de precios
    diferencia = precio_final - precio_actual
    print("\nüîç Comparativa de precios:")
    print(f"   - Diferencia: {diferencia:,.5f}")

    # ‚úÖ Evaluar si alcanz√≥ el TP correctamente
    if prediccion == 1:  # Predicci√≥n de subida
        if precio_final >= precio_actual + tp:
            print(f"‚úÖ Predicci√≥n correcta: El precio SUBI√ì y alcanz√≥ el Take Profit (TP) con precio {precio_final:,.5f}.")
            return True
        else:
            print(f"‚ùå Predicci√≥n incorrecta: El precio NO SUBI√ì lo suficiente para alcanzar el TP.")

    elif prediccion == 0:  # Predicci√≥n de bajada
        if precio_final <= precio_actual - tp:
            print(f"‚úÖ Predicci√≥n correcta: El precio BAJ√ì y alcanz√≥ el Take Profit (TP) con precio {precio_final:,.5f}.")
            return True
        else:
            print(f"‚ùå Predicci√≥n incorrecta: El precio NO BAJ√ì lo suficiente para alcanzar el TP.")

    # ‚ùå Error de tipo: Asegurar que precio_inicio y precio_futuro sean n√∫meros antes de guardar
    if not isinstance(precio_actual, (int, float)) or not isinstance(precio_final, (int, float)):
        print(f"‚ùå Error: precio_inicio ({precio_actual}) o precio_futuro ({precio_final}) no son n√∫meros v√°lidos.")
        return False

    return False



from datetime import datetime

from datetime import datetime

from datetime import datetime

from datetime import datetime

def guardar_prediccion(simbolo, resultado, precio_futuro, precio_inicio):
    timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    # üîß Correcci√≥n: Verificar si los valores son num√©ricos antes de convertir
    try:
        precio_inicio = float(precio_inicio)
        precio_futuro = float(precio_futuro)
    except ValueError:
        print(f"‚ùå Error: precio_inicio ({precio_inicio}) o precio_futuro ({precio_futuro}) no son n√∫meros v√°lidos.")
        return  # Evitamos escribir datos incorrectos

    # üìÇ Determinar en qu√© archivo guardar
    archivo = "correctas.txt" if resultado == "CORRECTA" else "incorrectas.txt"

    # üìù Guardar en el archivo correspondiente
    with open(archivo, "a") as f:
        f.write(f"{timestamp} | {simbolo} | {resultado} | Inicio: {precio_inicio:.6f} | Futuro: {precio_futuro:.6f}\n")

    print(f"‚úÖ Predicci√≥n guardada en {archivo}")




def buscar_por_fecha(archivo, fecha):
    with open(archivo, "r") as f:
        lineas = f.readlines()
    
    resultados = [linea for linea in lineas if fecha in linea]
    return resultados







