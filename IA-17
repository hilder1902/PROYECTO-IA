def evaluar_prediccion_binaria(prediccion, simbolos, modelo, dfs, scaler, precios_actuales=None, tp=0.0001):
    """
    Eval√∫a las predicciones de m√∫ltiples s√≠mbolos en paralelo.

    :param prediccion: Diccionario con las direcciones de predicci√≥n por s√≠mbolo (1 = subir, 0 = bajar).
    :param simbolos: Lista de s√≠mbolos en MT5.
    :param modelo: Modelo de ML para predicci√≥n.
    :param dfs: Diccionario con DataFrames de los datos recientes por s√≠mbolo.
    :param scaler: Scaler para transformar la predicci√≥n.
    :param precios_actuales: Diccionario con precios iniciales (opcional, se obtiene de MT5 si es None).
    :param tp: Take Profit en t√©rminos de diferencia de precio.
    :return: Diccionario con resultados por s√≠mbolo.
    """

    resultados = {}

    def procesar_simbolo(simbolo):
        precio_actual = precios_actuales.get(simbolo) if precios_actuales else None

        # Obtener el precio actual si no se proporciona
        if precio_actual is None or not isinstance(precio_actual, (int, float)) or precio_actual <= 0:
            tick_info = mt5.symbol_info_tick(simbolo)
            if tick_info and isinstance(tick_info.bid, (int, float)):
                precio_actual = float(tick_info.bid)
                print(f"‚úî Precio inicial obtenido de MT5 ({simbolo}): {precio_actual:,.5f}")
            else:
                print(f"‚ùå Error: No se pudo obtener un precio inicial v√°lido para {simbolo}.")
                return simbolo, None, None, None  

        # Obtener los √∫ltimos 50 datos para la predicci√≥n
        recent_data = dfs[simbolo][-50:].values.reshape(1, 50, -1)
        prediccion_simbolo = modelo.predict(recent_data)[0][0]

        # Convertir predicci√≥n al valor real
        if hasattr(scaler, "min_") and hasattr(scaler, "scale_"):
            prediccion_real = scaler.inverse_transform(np.array([[prediccion_simbolo]]))[0][0]
        else:
            logging.error(f"El scaler no ha sido ajustado antes de hacer inverse_transform en {simbolo}.")
            prediccion_real = prediccion_simbolo  

        # Determinar direcci√≥n de la predicci√≥n
        if prediccion_real > precio_actual + tp:
            direccion = "üìà SUBE"
            precio_objetivo = precio_actual + tp
        elif prediccion_real < precio_actual - tp:
            direccion = "üìâ BAJA"
            precio_objetivo = precio_actual - tp
        else:
            direccion = "üü∞ SIN CAMBIO"
            precio_objetivo = precio_actual  

        logging.info(f"{simbolo} - Precio actual: {precio_actual:,.5f}, Predicci√≥n: {direccion} (Objetivo TP: {precio_objetivo:,.5f})")

        # Esperar 5 segundos antes de obtener el precio final
        time.sleep(5)

        # Obtener el precio despu√©s de 5 segundos
        tick_info = mt5.symbol_info_tick(simbolo)
        if tick_info and isinstance(tick_info.bid, (int, float)):
            precio_final = float(tick_info.bid)
            print(f"‚úî Precio despu√©s de 5 segundos ({simbolo}): {precio_final:,.5f}")
        else:
            print(f"‚ö† Error: No se pudo obtener un precio final v√°lido para {simbolo}.")
            return simbolo, precio_actual, direccion, None  


        # Comparativa de precios
        diferencia = precio_actual - precio_final  
        print("\nüîç Comparativa de precios:")

        if diferencia == 0:
          print("   - No hay diferencia de precio.")
        elif abs(diferencia) < 1:
         diferencia *= 100  # Convertir a centavos
         print(f"   - Diferencia de: {diferencia:,.2f} centavos de d√≥lar")
        elif abs(diferencia) == 1:
          print("   - Diferencia de: 1 d√≥lar")
        else:
         print(f"   - Diferencia de: {abs(diferencia):,.5f} d√≥lares")

        # Evaluar si alcanz√≥ el TP correctamente
        if direccion == "üìà SUBE":
            if precio_final >= precio_actual + tp:
                print(f"‚úÖ Predicci√≥n correcta: El precio SUBI√ì y alcanz√≥ el Take Profit (TP) con precio de {precio_final:,.5f}.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            elif precio_final <= precio_actual - tp:
                print(f"‚ö†Ô∏è Predicci√≥n opuesta: Se esperaba que SUBIERA, pero el precio BAJ√ì.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            else:
                print(f"‚ùå Predicci√≥n incorrecta: El precio NO SUBI√ì lo suficiente para alcanzar el TP.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")

        elif direccion == "üìâ BAJA":
            if precio_final <= precio_actual - tp:
                print(f"‚úÖ Predicci√≥n correcta: El precio BAJ√ì y alcanz√≥ el Take Profit (TP) con precio de {precio_final:,.5f}.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            elif precio_final >= precio_actual + tp:
                print(f"‚ö†Ô∏è Predicci√≥n opuesta: Se esperaba que BAJARA, pero el precio SUBI√ì.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            else:
                print(f"‚ùå Predicci√≥n incorrecta: El precio NO BAJ√ì lo suficiente para alcanzar el TP.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")

        # Verificaci√≥n final para evitar valores no num√©ricos
        if not isinstance(precio_actual, (int, float)) or not isinstance(precio_final, (int, float)):
            print(f"‚ùå Error: precio_actual ({precio_actual}) o precio_final ({precio_final}) no son n√∫meros v√°lidos.")
            return simbolo, precio_actual, direccion, None  

        return simbolo, precio_actual, direccion, precio_final  

    # Ejecutar en paralelo para todos los s√≠mbolos
    with concurrent.futures.ThreadPoolExecutor() as executor:
        futuros = {executor.submit(procesar_simbolo, simbolo): simbolo for simbolo in simbolos}
        for futuro in concurrent.futures.as_completed(futuros):
            simbolo, precio_actual, direccion, precio_final = futuro.result()
            resultados[simbolo] = (precio_actual, direccion, precio_final)

    return resultados  











import re

from datetime import datetime

import time

from datetime import datetime

import locale
from datetime import datetime

# Configurar el formato num√©rico americano (si el sistema lo soporta)
locale.setlocale(locale.LC_NUMERIC, "en_US.UTF-8")

def formatear_precio(precio):
    return locale.format_string("%.6f", precio, grouping=True).replace(",", "X").replace(".", ",").replace("X", ".")

def guardar_prediccion(simbolo, direccion, precio_final, precio_actual):
    timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    try:
        precio_actual = float(precio_actual)
        precio_futuro = float(precio_final)
    except ValueError:
        print(f"‚ùå Error: precio_inicio ({precio_actual}) o precio_futuro ({precio_futuro}) no son n√∫meros v√°lidos.")
        return  

    resultado = "INCORRECTA"
    if (direccion == "üìà SUBE" and precio_final >= precio_actual) or \
       (direccion == "üìâ BAJA" and precio_final <= precio_actual):
        resultado = "CORRECTA"

    archivo = "correctas.txt" if resultado == "CORRECTA" else "incorrectas.txt"

    with open(archivo, "a", encoding="utf-8") as f:
        f.write(f"{timestamp} | {simbolo} | {direccion} | {resultado} | precio actual: {formatear_precio(precio_actual)} | presio final: {formatear_precio(precio_final)}\n")

    print(f"‚úÖ Predicci√≥n guardada en {archivo}: {direccion} ({resultado})")




def buscar_por_fecha(archivo, fecha):
    with open(archivo, "r") as f:
        lineas = f.readlines()
    
    resultados = [linea for linea in lineas if fecha in linea]
    return resultados









import logging
import time
import pandas as pd
import MetaTrader5 as mt5
from concurrent.futures import ThreadPoolExecutor
from sklearn.preprocessing import MinMaxScaler

def predecir_todos_los_simbolos(modelo, dfs, simbolos, tp=0.0001):
    """
    Realiza predicciones en paralelo para todos los s√≠mbolos.
    """
    resultados_globales = {}

    def procesar_simbolo(simbolo):
        try:
            if simbolo not in dfs or dfs[simbolo].empty:
                logging.warning(f"‚ö†Ô∏è No hay datos suficientes para {simbolo}.")
                return simbolo, None, None, None

            precio_actual = dfs[simbolo]['close'].iloc[-1]
            datos_entrada = dfs[simbolo][-50:].values.reshape(1, 50, -1)

            prediccion = modelo.predict(datos_entrada)[0][0]
            direccion = "üìà SUBE" if prediccion > 0.5 else "üìâ BAJA"
            precio_objetivo = precio_actual + tp if prediccion > 0.5 else precio_actual - tp
            
            logging.info(f"‚úî Precio inicial obtenido de MT5 ({simbolo}): {precio_actual:.5f}")
            return simbolo, precio_actual, direccion, precio_objetivo

        except Exception as e:
            logging.warning(f"‚ö†Ô∏è Error al procesar {simbolo}: {str(e)}")
            return simbolo, None, None, None

    with ThreadPoolExecutor(max_workers=len(simbolos)) as executor:
        futuros = {executor.submit(procesar_simbolo, simbolo): simbolo for simbolo in simbolos}

        for futuro in futuros:
            simbolo, precio_actual, direccion, precio_objetivo = futuro.result()
            if precio_actual is not None:
                logging.info(f"{simbolo} - Precio actual: {precio_actual:.5f}, Predicci√≥n: {direccion} (Objetivo TP: {precio_objetivo:.5f})")
                resultados_globales[simbolo] = (precio_actual, direccion, precio_objetivo)

    if not resultados_globales:
        logging.warning("‚ùå No se realizaron predicciones debido a falta de datos.")
        return

    logging.info("\n‚è≥ Esperando 5 segundos para evaluar el resultado...\n")
    time.sleep(5)

    resultados_futuros = {}
    for simbolo in resultados_globales.keys():
        rates = mt5.copy_rates_from_pos(simbolo, mt5.TIMEFRAME_M1, 0, 1)
        if rates is not None and len(rates) > 0:
            precio_final = rates[0]['close']
            logging.info(f"‚úî Precio despu√©s de 5 segundos ({simbolo}): {precio_final:.5f}")
            resultados_futuros[simbolo] = precio_final

    logging.info("\nüîç Comparativa de precios:")
    for simbolo in resultados_globales:
        if simbolo in resultados_futuros:
            precio_inicial = resultados_globales[simbolo][0]
            precio_final = resultados_futuros[simbolo]
            diferencia = precio_final - precio_inicial
            logging.info(f"   - Diferencia de: {diferencia:.5f} d√≥lares para {simbolo}")

    logging.info("\n")
    for simbolo in resultados_globales:
        if simbolo in resultados_futuros:
            precio_inicial, direccion, objetivo_tp = resultados_globales[simbolo]
            precio_final = resultados_futuros[simbolo]

            if (direccion == "üìà SUBE" and precio_final >= objetivo_tp) or (direccion == "üìâ BAJA" and precio_final <= objetivo_tp):
                logging.info(f"‚úÖ Predicci√≥n correcta: El precio {direccion} y alcanz√≥ el Take Profit (TP) con precio de {precio_final:.5f}.")
                with open("correctas.txt", "a", encoding="utf-8") as file:
                    file.write(f"{simbolo} - {direccion} (CORRECTA) - Precio inicial: {precio_inicial:.5f}, Precio final: {precio_final:.5f}\n")
            else:
                logging.warning(f"‚ùå Predicci√≥n incorrecta: NO {direccion}.")
            logging.info(f"   Precio inicial: {precio_inicial:.5f}, Precio final: {precio_final:.5f}\n")

def main():
    logging.basicConfig(level=logging.INFO, format="%(asctime)s - %(levelname)s - %(message)s")

    if not mt5.initialize():
        logging.error("‚ùå Error al inicializar MetaTrader 5.")
        exit()

    scaler = MinMaxScaler(feature_range=(0, 1))
    modelo = cargar_modelo()  # Aseg√∫rate de que esta funci√≥n est√© definida
    pares_divisas = ["EURUSDm", "GBPUSDm", "USDJPYm"]

    logging.info("üìä Entrenando el modelo antes de predicciones en tiempo real...")
    datos_historicos = obtener_datos_mt5("BTCUSDm", mt5.TIMEFRAME_M1, 5000)

    if datos_historicos is not None and len(datos_historicos) > 50:
        X, y = preparar_datos(datos_historicos)
        split = int(len(X) * 0.8)
        modelo = entrenar_modelo(modelo, X[:split], y[:split], X[split:], y[split:])
        guardar_modelo(modelo)

    logging.info("‚úÖ Modelo cargado. Iniciando predicciones en tiempo real...")

    while True:
        logging.info("\n" + "="*50)
        logging.info("üîç Iniciando predicciones para todos los s√≠mbolos...")

        dfs = {}
        for simbolo in pares_divisas:
            rates = mt5.copy_rates_from_pos(simbolo, mt5.TIMEFRAME_M1, 0, 500)
            if rates is None or len(rates) < 50:
                logging.warning(f"‚ö†Ô∏è No hay suficientes datos recientes para {simbolo}.")
                continue

            df = pd.DataFrame(rates)[['close']]

            # ‚úÖ Ajustamos el scaler con los datos antes de transformar
            scaler.fit(df[['close']])  
            df['close'] = scaler.transform(df[['close']])  

            dfs[simbolo] = df

        if dfs:
            predecir_todos_los_simbolos(modelo, dfs, list(dfs.keys()))
            
        logging.info("\n" + "="*50)
        time.sleep(5)  # Aumenta la pausa para evitar sobrecarga

if __name__ == "__main__":
    main()
