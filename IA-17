def evaluar_prediccion_binaria(prediccion, simbolos, modelo, dfs, scaler, precios_actuales=None, tp=0.0001):
    """
    EvalÃºa las predicciones de mÃºltiples sÃ­mbolos en paralelo.

    :param prediccion: Diccionario con las direcciones de predicciÃ³n por sÃ­mbolo (1 = subir, 0 = bajar).
    :param simbolos: Lista de sÃ­mbolos en MT5.
    :param modelo: Modelo de ML para predicciÃ³n.
    :param dfs: Diccionario con DataFrames de los datos recientes por sÃ­mbolo.
    :param scaler: Scaler para transformar la predicciÃ³n.
    :param precios_actuales: Diccionario con precios iniciales (opcional, se obtiene de MT5 si es None).
    :param tp: Take Profit en tÃ©rminos de diferencia de precio.
    :return: Diccionario con resultados por sÃ­mbolo.
    """

    resultados = {}

    def procesar_simbolo(simbolo):
        precio_actual = precios_actuales.get(simbolo) if precios_actuales else None

        # Obtener el precio actual si no se proporciona
        if precio_actual is None or not isinstance(precio_actual, (int, float)) or precio_actual <= 0:
            tick_info = mt5.symbol_info_tick(simbolo)
            if tick_info and isinstance(tick_info.bid, (int, float)):
                precio_actual = float(tick_info.bid)
                print(f"âœ” Precio inicial obtenido de MT5 ({simbolo}): {precio_actual:,.5f}")
            else:
                print(f"âŒ Error: No se pudo obtener un precio inicial vÃ¡lido para {simbolo}.")
                return simbolo, None, None, None  

        # Obtener los Ãºltimos 50 datos para la predicciÃ³n
        recent_data = dfs[simbolo][-50:].values.reshape(1, 50, -1)
        prediccion_simbolo = modelo.predict(recent_data)[0][0]

        # Convertir predicciÃ³n al valor real
        if hasattr(scaler, "min_") and hasattr(scaler, "scale_"):
            prediccion_real = scaler.inverse_transform(np.array([[prediccion_simbolo]]))[0][0]
        else:
            logging.error(f"El scaler no ha sido ajustado antes de hacer inverse_transform en {simbolo}.")
            prediccion_real = prediccion_simbolo  

        # Determinar direcciÃ³n de la predicciÃ³n
        if prediccion_real > precio_actual + tp:
            direccion = "ðŸ“ˆ SUBE"
            precio_objetivo = precio_actual + tp
        elif prediccion_real < precio_actual - tp:
            direccion = "ðŸ“‰ BAJA"
            precio_objetivo = precio_actual - tp
        else:
            direccion = "ðŸŸ° SIN CAMBIO"
            precio_objetivo = precio_actual  

        logging.info(f"{simbolo} - Precio actual: {precio_actual:,.5f}, PredicciÃ³n: {direccion} (Objetivo TP: {precio_objetivo:,.5f})")

        # Esperar 5 segundos antes de obtener el precio final
        time.sleep(5)

        # Obtener el precio despuÃ©s de 5 segundos
        tick_info = mt5.symbol_info_tick(simbolo)
        if tick_info and isinstance(tick_info.bid, (int, float)):
            precio_final = float(tick_info.bid)
            print(f"âœ” Precio despuÃ©s de 5 segundos ({simbolo}): {precio_final:,.5f}")
        else:
            print(f"âš  Error: No se pudo obtener un precio final vÃ¡lido para {simbolo}.")
            return simbolo, precio_actual, direccion, None  


        # Comparativa de precios
        diferencia = precio_actual - precio_final  
        print("\nðŸ” Comparativa de precios:")

        if diferencia == 0:
          print("   - No hay diferencia de precio.")
        elif abs(diferencia) < 1:
         diferencia *= 100  # Convertir a centavos
         print(f"   - Diferencia de: {diferencia:,.2f} centavos de dÃ³lar")
        elif abs(diferencia) == 1:
          print("   - Diferencia de: 1 dÃ³lar")
        else:
         print(f"   - Diferencia de: {abs(diferencia):,.5f} dÃ³lares")

        # Evaluar si alcanzÃ³ el TP correctamente
        if direccion == "ðŸ“ˆ SUBE":
            if precio_final >= precio_actual + tp:
                print(f"âœ… PredicciÃ³n correcta: El precio SUBIÃ“ y alcanzÃ³ el Take Profit (TP) con precio de {precio_final:,.5f}.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            elif precio_final <= precio_actual - tp:
                print(f"âš ï¸ PredicciÃ³n opuesta: Se esperaba que SUBIERA, pero el precio BAJÃ“.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            else:
                print(f"âŒ PredicciÃ³n incorrecta: El precio NO SUBIÃ“ lo suficiente para alcanzar el TP.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")

        elif direccion == "ðŸ“‰ BAJA":
            if precio_final <= precio_actual - tp:
                print(f"âœ… PredicciÃ³n correcta: El precio BAJÃ“ y alcanzÃ³ el Take Profit (TP) con precio de {precio_final:,.5f}.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            elif precio_final >= precio_actual + tp:
                print(f"âš ï¸ PredicciÃ³n opuesta: Se esperaba que BAJARA, pero el precio SUBIÃ“.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")
            else:
                print(f"âŒ PredicciÃ³n incorrecta: El precio NO BAJÃ“ lo suficiente para alcanzar el TP.\n Precio inicial: {precio_actual:,.5f}, Precio final: {precio_final:,.5f}")

        # VerificaciÃ³n final para evitar valores no numÃ©ricos
        if not isinstance(precio_actual, (int, float)) or not isinstance(precio_final, (int, float)):
            print(f"âŒ Error: precio_actual ({precio_actual}) o precio_final ({precio_final}) no son nÃºmeros vÃ¡lidos.")
            return simbolo, precio_actual, direccion, None  

        return simbolo, precio_actual, direccion, precio_final  

    # Ejecutar en paralelo para todos los sÃ­mbolos
    with concurrent.futures.ThreadPoolExecutor() as executor:
        futuros = {executor.submit(procesar_simbolo, simbolo): simbolo for simbolo in simbolos}
        for futuro in concurrent.futures.as_completed(futuros):
            simbolo, precio_actual, direccion, precio_final = futuro.result()
            resultados[simbolo] = (precio_actual, direccion, precio_final)

    return resultados  











import re

