def evaluar_prediccion_binaria(prediccion, simbolo, modelo, df, scaler, precio_actual=None, tp=0.0001):
    """
    Eval√∫a si la predicci√≥n fue correcta en t√©rminos de alcanzar el TP.
    Obtiene los precios futuros directamente desde MT5 y compara con el precio inicial.

    :param prediccion: Direcci√≥n de la predicci√≥n (1 = subir, 0 = bajar)
    :param simbolo: S√≠mbolo del activo en MT5
    :param modelo: Modelo de ML para predicci√≥n
    :param df: DataFrame con los datos recientes
    :param scaler: Scaler para transformar la predicci√≥n
    :param precio_actual: Precio inicial desde hacer_prediccion (opcional, se obtiene de MT5 si es None)
    :param tp: Take Profit en t√©rminos de diferencia de precio
    :return: precio_actual, direccion, precio_final
    """

    # Obtener el precio actual si no se proporciona
    if precio_actual is None or not isinstance(precio_actual, (int, float)) or precio_actual <= 0:
        tick_info = mt5.symbol_info_tick(simbolo)
        if tick_info and isinstance(tick_info.bid, (int, float)):
            precio_actual = float(tick_info.bid)
            print(f"‚úî Precio inicial obtenido de MT5: {precio_actual:,.5f}")
        else:
            print(f"‚ùå Error: No se pudo obtener un precio inicial v√°lido para {simbolo}.")
            return None, None, None  

    # Obtener los √∫ltimos 50 datos para la predicci√≥n
    recent_data = df[-50:].values.reshape(1, 50, -1)
    prediccion = modelo.predict(recent_data)[0][0]

    # Convertir predicci√≥n al valor real
    if hasattr(scaler, "min_") and hasattr(scaler, "scale_"):
        prediccion_real = scaler.inverse_transform(np.array([[prediccion]]))[0][0]
    else:
        logging.error("El scaler no ha sido ajustado antes de hacer inverse_transform.")
        prediccion_real = prediccion  

    # Determinar direcci√≥n de la predicci√≥n
    if prediccion_real > precio_actual + tp:
        direccion = "SUBE"
        precio_objetivo = precio_actual + tp  # Precio objetivo si sube
    elif prediccion_real < precio_actual - tp:
        direccion = "BAJA"
        precio_objetivo = precio_actual - tp  # Precio objetivo si baja
    else:
        direccion = "SIN CAMBIO"
        precio_objetivo = precio_actual  # Si la predicci√≥n est√° dentro del rango del TP

    logging.info(f"Precio actual: {precio_actual:,.5f}, Predicci√≥n: {direccion} (Objetivo TP: {precio_objetivo:,.5f})")

    # Esperar 5 segundos antes de obtener el precio final
    time.sleep(5)

    # Obtener el precio despu√©s de 5 segundos
    tick_info = mt5.symbol_info_tick(simbolo)
    if tick_info and isinstance(tick_info.bid, (int, float)):
        precio_final = float(tick_info.bid)
        print(f"‚úî Precio despu√©s de 5 segundos: {precio_final:,.5f}")
    else:
        print(f"‚ö† Error: No se pudo obtener un precio final v√°lido para {simbolo}.")
        return precio_actual, direccion, None  # Retornar precio_actual y direcci√≥n, pero precio_final como None

    # Comparativa de precios
    diferencia = precio_final - precio_actual
    print("\nüîç Comparativa de precios:")
    print(f"   - Diferencia: {diferencia:,.5f}")

    # Evaluar si alcanz√≥ el TP correctamente
    if direccion == "SUBE":
        if precio_final >= precio_actual + tp:
            print(f"‚úÖ Predicci√≥n correcta: El precio SUBI√ì y alcanz√≥ el Take Profit (TP) con precio {precio_final:,.5f}.")
        else:
            print(f"‚ùå Predicci√≥n incorrecta: El precio NO SUBI√ì lo suficiente para alcanzar el TP.")

    elif direccion == "BAJA":
        if precio_final <= precio_actual - tp:
            print(f"‚úÖ Predicci√≥n correcta: El precio BAJ√ì y alcanz√≥ el Take Profit (TP) con precio {precio_final:,.5f}.")
        else:
            print(f"‚ùå Predicci√≥n incorrecta: El precio NO BAJ√ì lo suficiente para alcanzar el TP.")

    # Verificaci√≥n final para evitar valores no num√©ricos
    if not isinstance(precio_actual, (int, float)) or not isinstance(precio_final, (int, float)):
        print(f"‚ùå Error: precio_actual ({precio_actual}) o precio_final ({precio_final}) no son n√∫meros v√°lidos.")
        return precio_actual, direccion, None  # Retornar precio_actual y direcci√≥n, pero precio_final como None

    return precio_actual, direccion, precio_final





