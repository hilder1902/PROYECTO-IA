def guardar_prediccion(simbolo, direccion, precio_futuro, precio_inicio):
    timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    # Verificar si los valores son numéricos
    try:
        precio_inicio = float(precio_inicio)
        precio_futuro = float(precio_futuro)
    except ValueError:
        print(f"❌ Error: precio_inicio ({precio_inicio}) o precio_futuro ({precio_futuro}) no son números válidos.")
        return  # Evitamos escribir datos incorrectos

    # Determinar si la predicción fue correcta
    resultado = "INCORRECTA"
    if (direccion == "SUBE" and precio_futuro >= precio_inicio) or \
       (direccion == "BAJA" and precio_futuro <= precio_inicio):
        resultado = "CORRECTA"

    # Determinar en qué archivo guardar
    archivo = "correctas.txt" if resultado == "CORRECTA" else "incorrectas.txt"

    # Guardar en el archivo correspondiente
    with open(archivo, "a") as f:
        f.write(f"{timestamp} | {simbolo} | {direccion} | {resultado} | Inicio: {precio_inicio:.6f} | Futuro: {precio_futuro:.6f}\n")

    print(f"✅ Predicción guardada en {archivo}: {direccion} ({resultado})")




def buscar_por_fecha(archivo, fecha):
    with open(archivo, "r") as f:
        lineas = f.readlines()
    
    resultados = [linea for linea in lineas if fecha in linea]
    return resultados







