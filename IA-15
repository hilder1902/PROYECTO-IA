def evaluar_prediccion_binaria(prediccion, simbolo, modelo, df, scaler, precio_actual=None, tp=0.0001):
    """
    EvalÃºa si la predicciÃ³n fue correcta en tÃ©rminos de alcanzar el TP.
    Obtiene los precios futuros directamente desde MT5 y compara con el precio inicial.

    :param prediccion: DirecciÃ³n de la predicciÃ³n (1 = subir, 0 = bajar)
    :param simbolo: SÃ­mbolo del activo en MT5
    :param modelo: Modelo de ML para predicciÃ³n
    :param df: DataFrame con los datos recientes
    :param scaler: Scaler para transformar la predicciÃ³n
    :param precio_actual: Precio inicial desde hacer_prediccion (opcional, se obtiene de MT5 si es None)
    :param tp: Take Profit en tÃ©rminos de diferencia de precio
    :return: precio_actual, direccion, precio_final
    """

    # Obtener el precio actual si no se proporciona
    if precio_actual is None or not isinstance(precio_actual, (int, float)) or precio_actual <= 0:
        tick_info = mt5.symbol_info_tick(simbolo)
        if tick_info and isinstance(tick_info.bid, (int, float)):
            precio_actual = float(tick_info.bid)
            print(f"âœ” Precio inicial obtenido de MT5: {precio_actual:,.5f}")
        else:
            print(f"âŒ Error: No se pudo obtener un precio inicial vÃ¡lido para {simbolo}.")
            return None, None, None  

    # Obtener los Ãºltimos 50 datos para la predicciÃ³n
    recent_data = df[-50:].values.reshape(1, 50, -1)
    prediccion = modelo.predict(recent_data)[0][0]

    # Convertir predicciÃ³n al valor real
    if hasattr(scaler, "min_") and hasattr(scaler, "scale_"):
        prediccion_real = scaler.inverse_transform(np.array([[prediccion]]))[0][0]
    else:
        logging.error("El scaler no ha sido ajustado antes de hacer inverse_transform.")
        prediccion_real = prediccion  

    # Determinar direcciÃ³n de la predicciÃ³n
    if prediccion_real > precio_actual + tp:
        direccion = "ðŸ“ˆ SUBE"
        precio_objetivo = precio_actual + tp  # Precio objetivo si sube
    elif prediccion_real < precio_actual - tp:
        direccion = "ðŸ“‰ BAJA"
        precio_objetivo = precio_actual - tp  # Precio objetivo si baja
    else:
        direccion = "ðŸŸ° SIN CAMBIO"
        precio_objetivo = precio_actual  # Si la predicciÃ³n estÃ¡ dentro del rango del TP

    logging.info(f"Precio actual: {precio_actual:,.5f}, PredicciÃ³n: {direccion} (Objetivo TP: {precio_objetivo:,.5f})")

    # Esperar 5 segundos antes de obtener el precio final
    time.sleep(5)

    # Obtener el precio despuÃ©s de 5 segundos
    tick_info = mt5.symbol_info_tick(simbolo)
    if tick_info and isinstance(tick_info.bid, (int, float)):
        precio_final = float(tick_info.bid)
        print(f"âœ” Precio despuÃ©s de 5 segundos: {precio_final:,.5f}")
    else:
        print(f"âš  Error: No se pudo obtener un precio final vÃ¡lido para {simbolo}.")
        return precio_actual, direccion, None  # Retornar precio_actual y direcciÃ³n, pero precio_final como None

    # Comparativa de precios
    diferencia = precio_final - precio_actual
    print("\nðŸ” Comparativa de precios:")
    print(f"   - Diferencia: {diferencia:,.5f}")

    # Evaluar si alcanzÃ³ el TP correctamente
    if direccion == "ðŸ“ˆ SUBE":
        if precio_final >= precio_actual + tp:
            print(f"âœ… PredicciÃ³n correcta: El precio SUBIÃ“ y alcanzÃ³ el Take Profit (TP) con precio de {precio_final:,.5f}.\n precio inicial de {precio_actual:,.5f} y precio final de {precio_final:,.5f}")
        elif precio_final <= precio_actual - tp:
            print(f"âš ï¸ PredicciÃ³n opuesta: Se esperaba que SUBIERA, pero el precio BAJÃ“ respecto al precio inicial. \n precio inicial de {precio_actual:,.5f} y precio final de {precio_final:,.5f}.")
        else:
            print(f"âŒ PredicciÃ³n incorrecta: El precio NO SUBIÃ“ lo suficiente para alcanzar el TP {precio_final:,.5f}. \n precio inicial de  {precio_actual:,.5f} y precio final de {precio_final:,.5f}")

    elif direccion == "ðŸ“‰ BAJA":
        if precio_final <= precio_actual - tp:
            print(f"âœ… PredicciÃ³n correcta: El precio BAJÃ“ y alcanzÃ³ el Take Profit (TP) con precio de {precio_final:,.5f}. \n precio inicial de {precio_actual:,.5f} y precio final de {precio_final:,.5f}")
        elif precio_final >= precio_actual + tp:
            print(f"âš ï¸ PredicciÃ³n opuesta: Se esperaba que BAJARA, pero el precio SUBIÃ“ respecto  precio inicial. \n precio inicial de {precio_actual:,.5f} y precio final de {precio_final:,.5f}.")
        else:
            print(f"âŒ PredicciÃ³n incorrecta: El precio NO BAJÃ“ lo suficiente para alcanzar el TP {precio_final:,.5f}.\n precio inicial de {precio_actual:,.5f} y precio final de  {precio_final:,.5f}")

    # VerificaciÃ³n final para evitar valores no numÃ©ricos
    if not isinstance(precio_actual, (int, float)) or not isinstance(precio_final, (int, float)):
        print(f"âŒ Error: precio_actual ({precio_actual}) o precio_final ({precio_final}) no son nÃºmeros vÃ¡lidos.")
        return precio_actual, direccion, None  # Retornar precio_actual y direcciÃ³n, pero precio_final como None

    return precio_actual, direccion, precio_final









import re

from datetime import datetime

import time

from datetime import datetime

def guardar_prediccion(simbolo, direccion, precio_futuro, precio_inicio):
    timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")

    # Verificar si los valores son numÃ©ricos
    try:
        precio_inicio = float(precio_inicio)
        precio_futuro = float(precio_futuro)
    except ValueError:
        print(f"âŒ Error: precio_inicio ({precio_inicio}) o precio_futuro ({precio_futuro}) no son nÃºmeros vÃ¡lidos.")
        return  # Evitamos escribir datos incorrectos

    # Determinar si la predicciÃ³n fue correcta
    resultado = "INCORRECTA"
    if (direccion == "ðŸ“ˆ SUBE" and precio_futuro >= precio_inicio) or \
       (direccion == "ðŸ“‰ BAJA" and precio_futuro <= precio_inicio):
        resultado = "CORRECTA"

    # Determinar en quÃ© archivo guardar
    archivo = "correctas.txt" if resultado == "CORRECTA" else "incorrectas.txt"

    # Guardar en el archivo correspondiente con codificaciÃ³n UTF-8
    with open(archivo, "a", encoding="utf-8") as f:
        f.write(f"{timestamp} | {simbolo} | {direccion} | {resultado} | Inicio: {precio_inicio:.6f} | Futuro: {precio_futuro:.6f}\n")

    print(f"âœ… PredicciÃ³n guardada en {archivo}: {direccion} ({resultado})")




def buscar_por_fecha(archivo, fecha):
    with open(archivo, "r") as f:
        lineas = f.readlines()
    
    resultados = [linea for linea in lineas if fecha in linea]
    return resultados







